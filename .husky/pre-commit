#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Block committing env files that may contain secrets (allow .env.example only)
STAGED_ENV=$(git diff --cached --name-only | grep -E '^\.env$|^\.env\.production$|^\.env\.local$|\.env\.(production|development)\.local$' || true)
if [ -n "$STAGED_ENV" ]; then
  echo "âŒ SECURITY: Refusing to commit env files that may contain secrets:"
  echo "$STAGED_ENV"
  echo "   These are in .gitignore. Unstage with: git reset HEAD -- <file>"
  exit 1
fi

# Type check
echo "ğŸ“ Type checking..."
pnpm type-check || {
  echo "âŒ Type check failed. Fix TypeScript errors before committing."
  exit 1
}

# Lint
echo "ğŸ” Linting..."
pnpm lint || {
  echo "âŒ Lint check failed. Fix linting errors before committing."
  exit 1
}

echo "âœ… Pre-commit checks passed!"
